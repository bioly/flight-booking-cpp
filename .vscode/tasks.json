{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (make all)",
      "type": "shell",
      "command": "make",
      "args": ["all"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run application",
      "type": "shell",
      "command": "make",
      "args": ["run"],
      "problemMatcher": []
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "make",
      "args": ["test"],
      "problemMatcher": ["$gcc"]
    }
  ]
}
